int[0,10] waterLevelLeft = 4;
int[0,10] waterLevelRight = 8;
int[0,10] waterLevelLockChamber = 3;//Need to check edge case different level
int[0,10] waterLevelTarget = 0;


// for doors
const int doors = 2;
